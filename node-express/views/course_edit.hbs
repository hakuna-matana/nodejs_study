<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
  <div class="input-field">
    <input name="title" placeholder="Enter course title" id="title" type="text" class="validate" value="{{course.title}}" required>
    <label for="title">Title</label>
    <span class="helper-text" data-error="Enter valid title"></span>
  </div>
  <div class="input-field">
    <input name="price" placeholder="Enter course price" id="price" type="number" class="validate"  value="{{course.price}}" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter valid price"></span>
  </div>
  <div class="input-field">
    <input name="img" placeholder="Enter URL of course image" id="img" type="text" class="validate" value="{{course.img}}" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter valid URL"></span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}" />
  <button type="submit" class="btn cyan darken-1">Save</button>
</form>

<form action="/courses/remove" method="post">
  <input type="hidden" name="id" value="{{course.id}}">
  <button class="btn red darken-1">Delete course</button>
</form>