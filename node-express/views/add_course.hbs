<h1>Add new course</h1>

<form action="/add_course" method="post">
  <div class="input-field">
    <input name="title" placeholder="Enter course title" id="title" type="text" class="validate" required>
    <label for="title">Title</label>
    <span class="helper-text" data-error="Enter valid title"></span>
  </div>
  <div class="input-field">
    <input name="price" placeholder="Enter course price" id="price" type="number" class="validate" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter valid price"></span>
  </div>
  <div class="input-field">
    <input name="img" placeholder="Enter URL of course image" id="img" type="text" class="validate" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter valid URL"></span>
  </div>
  <button class="btn cyan darken-1">Add course</button>
</form>